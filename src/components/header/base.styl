body, html
    line-height 1
    font-weight 200

@media (-webkit-min-device-pixel-ratio: 1.5), (min-device-pixel-ratio: 1.5)
    .border-1px
        &::after
            -webkit-tansform scaleY(.7)
            transform scaleY(.7)

@media (-webkit-min-device-pixel-ratio: 2), (min-device-pixel-ratio: 2)
    .border-1px
        &::after
            -webkit-tansform scaleY(.5)
            transform scaleY(.5)